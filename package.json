{
  "name": "@bernankez/git-sync",
  "type": "module",
  "version": "0.1.1",
  "packageManager": "pnpm@8.14.1",
  "description": "Auto sync repos when pushing to git",
  "author": {
    "name": "Cole",
    "email": "bernankeic@gmail.com",
    "url": "https://github.com/Bernankez"
  },
  "license": "MIT",
  "homepage": "https://github.com/Bernankez/git-sync#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bernankez/git-sync.git"
  },
  "bugs": "https://github.com/Bernankez/git-sync/issues",
  "keywords": [],
  "sideEffects": false,
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "bin": {
    "git-sync": "bin/git-sync.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "pnpm build",
    "dev": "unbuild --stub",
    "build": "unbuild",
    "start": "tsx src/cli.ts",
    "watch": "tsx watch src/index.ts",
    "release": "bumpp && pnpm publish",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "fix": "eslint . --fix"
  },
  "dependencies": {
    "c12": "^1.6.1",
    "cac": "^6.7.14",
    "chalk": "^5.3.0",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@bernankez/eslint-config": "^0.7.4",
    "@types/node": "^20.11.5",
    "bumpp": "^9.3.0",
    "eslint": "^8.56.0",
    "lint-staged": "^15.2.0",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "unbuild": "^2.0.0",
    "vite": "^5.0.11",
    "vitest": "^1.2.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "publishConfig": {
    "access": "public"
  }
}
